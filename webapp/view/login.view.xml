<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" controllerName="cognitivepp.CognitiveApp.controller.login">
	<App id="app">
		<pages>
			<Page>
				<content>
					<VBox fitContainer="true" width="100%" direction="Column" id="vbox0" justifyContent="Center" alignItems="Center" backgroundDesign="Solid">
					<sap.ui.layout.form:SimpleForm xmlns:sap.ui.layout.form="sap.ui.layout.form" editable="true" layout="ResponsiveGridLayout" id="form0">
					
					    <sap.ui.layout.form:content>
			<!--				<Label text="Registered Email Address" width="100%" id="label0"/>-->
							<Input xmlns="sap.m" placeholder="Registered Email " id="idEmail" type="Email" required="true" liveChange="onEmail"/>
			<!--				<Label text="Password" width="100%" id="label1"/>-->
							<Input xmlns="sap.m" placeholder="Password" id="idPassword" type="Password" required="true" />
							<Button xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:html="http://www.w3.org/1999/xhtml" xmlns="sap.m" text="Login" id="button0" press="onLogin" type="Emphasized" width="100%"/>
							<Button xmlns="sap.m" text="New User" id="button1" press="onNewuser" width="100%"/>
					</sap.ui.layout.form:content>
					
					</sap.ui.layout.form:SimpleForm>
					<items/>
					</VBox>
				</content>
			<customHeader>
			    <Bar id="bar0">
			        <contentMiddle>
			            <Title xmlns="sap.m" text="Vendor Invoice Management" id="title0"/>
			        </contentMiddle>
			    </Bar>
			</customHeader>
			</Page>
		</pages>
	</App>
</mvc:View>